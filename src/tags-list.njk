---
permalink: /tags/
layout: layouts/base.njk
---
	<!-- Main Start -->
	<div class="main-container  -mt-6 pt-6 bg-gray-100 ">
		<div class="text-gray-700 px-5  py-10 text-center space-y-2"
			>
			<h1 class="text-3xl sm:text-4xl font-bold">Tags Cloud</h1>
      <p>Select one tag to read articles for single topic.</p>
		</div>

	</div>


  <div class="flex justify-center py-16 space-x-4">
      {% for tag in collections.tagList %}
      {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <a
          class="py-1 px-6 rounded-full shadow-xl shadow-blue-100 uppercase {% tagsmeta tag %}"
          href="{{ tagUrl | url }}"
          >{{ tag }}</a>
      {% endfor %}
  </div>
